{# templates/categories.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}Category list{% endblock %}
{% block content %}
    {% if categories %}
      <ul>    
        {% for cat in categories %}
          <li><a href = "{{ path('products', {'codCat': cat.codcat}  )}}">{{ cat.name }} </a></li> 
        {% endfor %}
      </ul>
    {% else %}
        No categories found
    {% endif %}
{% endblock %}
