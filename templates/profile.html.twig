{# templates/profile.html.twig #}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>User Details</title>
   
</head>
<body>
    <h1>{{ user.name }} Profile</h1>
    <ul>
        <li><strong>ID:</strong> {{ user.id }}</li>
        <li><strong>Email:</strong> {{ user.email }}</li>
        <li><strong>Password:</strong> {{ user.password }}</li> {# Esto solo para propósitos educativos, normalmente no deberías mostrar la contraseña de esta manera #}
        <li><strong>Profile:</strong> {{ user.profile }}</li>
        <li><strong>Name:</strong> {{ user.name }}</li>
        <li><strong>Role:</strong> {{ user.role }}</li>
        {# Agrega otros campos según sea necesario #}
    </ul>
</body>
</html>

